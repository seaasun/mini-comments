/* @import './weui-miniprogram/weui-wxss/dist/style/weui.wxss' */

.wxml-box {
  background-color: #F4F4F4; 
  width: 100%;
  height: 100%;
  min-height: 100vh;
  padding: 0;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.wxml-main {
  flex: 1 0 auto;
}

.text-clip {
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.text-clip-2 {
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.g-no-loader-more {
  text-align: center;
  margin-top: 164rpx;
  color: #B2B2B2;
}
.g-no-loader-more:after
{
  content: "到底啦~";
}

.g-web-error {
  text-align: center;
  margin-top: 164rpx;
  color: #B2B2B2;
}
.g-web-error-text {
  margin-top: 32rpx;
}

.g-input-display-button {
  border: none;
  background-color: #ffffff;
  font-weight: normal;
  text-align: left;
  border-radius: 0;
}  
.g-input-display-button::after{ border: none; }
.g-input-display-button:after{ border: none; }