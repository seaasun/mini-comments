/* miniprogram/pages/comments/comments.wxss */
.article-box {
  background-color: #ffffff;
  padding: 32rpx;
  display: flex;
  margin-bottom: 32rpx;
}

.article-image {
  flex-basis: 108rpx;
  width: 108rpx;
  min-width: 108rpx;
  height: 108rpx;
  min-height: 108rpx;
  background-color: #DFDFDF;
  display: block;
  margin-right: 32rpx;
}
.article-title {
  font-size: 32rpx;
  flex-grow: 1;
}

.article-privew-text {
  height: 32rpx;
  width: 100%;
  margin: 0 16rpx 16rpx 0;
  background-color: #F4F4F4;
}

.comment-container {
  background-color: #ffffff;
}
.comment-brief {
  display: flex;
  justify-content: space-between;
}

.comment-write {
  color: #07c160;
  padding: 32rpx;
}

.comment-text {
  padding: 32rpx;
}

.comment-box {
  background-color: #ffffff;
  border-bottom: 1px solid #E5E5E5;
  display: flex;
  padding: 32rpx;
 
}

.comment-avatar {
  width:64rpx;
  height: 64rpx;
  min-width: 64prx;
  max-height: 64rpx;
  overflow: hidden;
  background-color: #DFDFDF;
}
.comment-main {
  margin-left: 32rpx;
  flex-grow: 1;
}

.comment-brief {
  font-size: 28rpx;
  color: #B2B2B2;
  display: flex;
  justify-content: space-between;
  flex-grow: 1;
}
.first-comment {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 16rpx;
  padding: 108rpx 32rpx;
  background-color: #F4F4F4;
}
.first-comment-text {
  margin-left: 16rpx;
  font-size: 32rpx;
}

.comment-brief-preview {
  background-color: #F4F4F4;
  width: 240rpx;
  height: 32rpx;
}

.comment-content-preview {
  background-color: #F4F4F4;
  width: 100%;
  height: 48rpx;
  margin-top: 32rpx;
}

.comment-footer {
  margin-bottom: 96rpx
}
