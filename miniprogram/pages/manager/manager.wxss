/* miniprogram/pages/manager/manager.wxss */
.manager-box {
  background-color: #ffffff;
  padding: 32rpx;
  display: flex;
  margin-bottom: 32rpx;
}

.manager-avator {
    width: 96rpx;
    min-width: 96rpx;
    height: 96rpx;
    min-height: 96rpx;
    background-color: #B2B2B2;
    display: block;
    margin-right: 32rpx;
}

.manager-name {
    font-size: 48rpx;
}

.topic-lists {
   
    width: 100%
}

.topic-box {
    /* border-bottom: 1px solid #eee; */
    background-color: #ffffff;
    margin: 16rpx 0rpx;
    padding: 32rpx 32rpx 0 32rpx
}
.topic-time {
    color: #B2B2B2;
    margin-bottom: 16rpx;
}
.topic-item {
    display: flex;
}

.topic-image {
    flex-basis: 124rpx;
    width: 124rpx;
    min-width: 124rpx;
    height: 124rpx;
    overflow: hidden;
    background-color: #DFDFDF;
    margin-left: 32rpx;
}

.topic-image-image {
    width: 124rpx;
    height: 124rpx;
}

.topic-main {
    flex-grow: 1;

}

.topic-text {
    margin-bottom: 8rpx;
    height: 50px;
    min-height: 50rpx;
}
.topic-brief {
    font-size: 28rpx;
    color: #B2B2B2;
    display: flex;
    justify-content: flex-start;
    flex-grow: 1;
    margin-top: 16rpx;
    border-top: 1rpx solid #E5E5E5;
    padding: 16rpx 0;
}
.topic-breif-item {
    margin-right: 32rpx;
}

.pagination-box {
    display: flex;
    margin: 32rpx;
}

.pagination-prev {
    flex-grow: 1;
    text-align: center;
    padding: 24rpx;
    background-color: #ffffff;
}
.pagination-select {
    flex-grow: 1;
    text-align: center;
    padding: 24rpx;
    background-color: #ffffff;
    margin-left: 24rpx;
    margin-right: 24rpx;
    min-width: 64rpx;
}
.pagination-next {
    flex-grow: 1;
    text-align: center;
    padding: 24rpx;
    background-color: #ffffff;
}

.go-create-topic {
    text-align: center;
    padding-top: 64rpx;
    padding-bottom: 64rpx;
    border-bottom: 1rpx solid #E5E5E5
}

.go-create-topic-brief {
    font-size: 28rpx;
    color: #B2B2B2;
    margin-top: 8rpx;
    padding: 16rpx 0;
}

